#include <stdio.h>
#include <stdlib.h>
#define importantvalue 0

int amicable(int a, int b);
int sumfactors(int n);

int
main(int argc, char *argv[]) {
	int n=1, x;
	while (n<100000){
		x = sumfactors(n);
		if (x>n){
			if (amicable(x,n)){
				printf("%5d and %5d are an amicable pair\n", n,x);
			}
		}n+=1;
	}
	return 0;
}

int 
amicable(a,b){
	if (sumfactors(a)==b && sumfactors(b)==a){
		return 1;
	}else {
		return 0;
	}
}

int
sumfactors(n){
	int sum=0, a=1;
	while (a<=n/2){
		if (n%a==0){
			sum+=a;
		}
		a+=1;
	}return sum;
}
