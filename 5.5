int 
nextperfect(n){
	while (isperfect(n)==0){
		n+=1;
	}
	return n;
}

int
isperfect(n){
	int sum=0, a=1;
	while (a<=n/2){
		if (n%a==0){
			sum+=a;
		}
		a+=1;
	}if (sum==n){
		return 1;
	}
	else{
		return 0;
	}
}
