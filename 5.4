	int n, k, x;
	printf("Enter integers n and k: ");
	while (scanf("%d %d", &n, &k)==2){
		x=n_choose_k(n,k);
		printf("%d choose %d is %d\n", n, k, x);
		printf("Enter integers n and k: ");
	}
	return 0;
